<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asus.jack_tsai.jackmoney">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoneyAddActivity"
            android:label="@string/title_activity_money_add"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <provider
            android:name=".MoneyProvider"
            android:authorities="com.asus.jack_tsai.jackmoney.provider"></provider>

        <activity
            android:name=".DayViewActivity"
            android:label="@string/title_activity_day_view"
            android:parentActivityName=".SecondActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asus.jack_tsai.jackmoney.SecondActivity" />
        </activity>
    </application>

</manifest>
